{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "dist/main",
        "rootDir": "src",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": false,
        "sourceMap": true
    },
    "include": [
        "src/main/**/*",
        "src/core/**/*",
        "src/db/**/*",
        "src/sync/**/*"
    ],
    "exclude": [
        "src/renderer/**/*",
        "node_modules"
    ]
}